{
    "name": "sprintpilot",
    "description": "Sprintpilot is a project management tool of choice for developers around the world to improve real-time collaboration.",
    "version": "1.0.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/margusliinev/sprintpilot"
    },
    "scripts": {
        "dev": "bun run --hot src/index.ts",
        "build": "bun build --compile --minify --sourcemap ./src/index.ts --outfile ./dist/index",
        "start": "./dist/index",
        "test": "bun test",
        "format": "prettier --write .",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:studio": "drizzle-kit studio",
        "db:check": "drizzle-kit check",
        "db:push": "drizzle-kit push",
        "db:pull": "drizzle-kit pull"
    },
    "dependencies": {
        "@hono/zod-validator": "0.5.0",
        "@oslojs/crypto": "1.0.1",
        "@oslojs/encoding": "1.1.0",
        "drizzle-orm": "0.43.1",
        "drizzle-kit": "0.31.1",
        "winston": "3.17.0",
        "mysql2": "3.14.1",
        "hono": "4.7.9",
        "zod": "3.24.4"
    },
    "devDependencies": {
        "@types/bun": "1.2.13",
        "prettier": "3.5.3"
    }
}
